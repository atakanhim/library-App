{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "MsSQL": "Server=localhost;Database=libraryAppV2;User ID=sa;Password=Admin123;TrustServerCertificate=True;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp: yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Message:lj}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=localhost;Database=libraryAppV2;User ID=sa;Password=Admin123;TrustServerCertificate=True;",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "autoCreateSqlTable": true
          },
          "columnOptionsSection": {
            "addTimestamp": true,
            "removeStandardColumns": [ "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "Action",
                "DataType": "nvarchar",
                "DataLength": 100
              },
              {
                "ColumnName": "AuthenticatedUserName", // islemi yapan token sahip kisi
                "DataType": "nvarchar",
                "DataLength": 100
              }
            ]
          }
        }
      }

    ]
  },
  "AllowedHosts": "*",
  "Token": {
    "Audience": "www.libraryapp.com",
    "Issuer": "www.libraryapp.com",
    "SecurityKey": "mysecretkeymysecretkeymysecretkey13"
  },
  "ExternalLoginSettings": {
    "Google": {
      "Client_ID": "413146979081-5hkrg1lhmta52o39m09d2u93cia0llna.apps.googleusercontent.com"
    }

  }

}
